mixin footer(data)

	- data = data || {}

	//- модификатор
	+modif('footer', data.mod)

	//- префикс
	+prefix('footer', data.prefix)

	//- атрибуты
	- attr = data.attr || ''

	div(class=`footer${pr}${mod}`)&attributes(attr)

		.footer__container
			.footer__top
				a.footer__logo(href="#")
					img(src="", alt="")
				.footer__nav.nav
					ul.nav__list 
						li.nav__item
							button.nav__item--link(data-section="section1") Main 
						li.nav__item
							button.nav__item--link(data-section="section2") About 
						li.nav__item
							button.nav__item--link(data-section="section3") Game features
						li.nav__item
							button.nav__item--link(data-section="section4") System requirements
						li.nav__item
							button.nav__item--link(data-section="section5") Quotes
				.footer__link 
					ul.link__list
						li.link__item
							a.link__item--facebook(href="facebook.com")
								img(src="", alt="")
						li.link__item
							a.link__item--twitter(href="twitter.com")
								img(src="", alt="")
						li.link__item
							a.link__item--youtube(href="youtube.com")
								img(src="", alt="")
						li.link__item
							a.link__item--twitch(href="twitch.com")
								img(src="", alt="")
			.footer__bottom 
				.legal-links
					ul.legal-links__list
						li.legal-links__item
							a.legal-links__link(href="#") Privacy Policy
						li.legal-links__item
							a.legal-links__link(href="#") Terms of Services
						li.legal-links__item
							a.legal-links__link(href="#") Code of Conduct	


			

			
